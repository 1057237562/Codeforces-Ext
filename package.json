{
	"name": "codeforcesbot-ext",
	"displayName": "Codeforces Bot",
	"description": "Codeforces automation. Fetch, test and submit problems.",
	"publisher": "avi01",
	"repository": "git@github.com:avi-01/CodeforcesBot-Ext.git",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "codeforces-explorer",
					"title": "Codeforces",
					"icon": "res/img/mainIcon.svg"
				}
			]
		},
		"views": {
			"codeforces-explorer": [
				{
					"id": "contests",
					"name": "Contests",
					"icon": "res/img/mainIcon.svg",
					"contextualTitle": "Contests"
				},
				{
					"id": "rating",
					"name": "Rating",
					"icon": "res/img/mainIcon.svg",
					"contextualTitle": "Rating"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "contests.refresh",
					"when": "view == contests",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "contest.createContestFolders",
					"when": "view == contests && viewItem == PastContest",
					"group": "inline"
				},
				{
					"command": "contest.createContestFolders",
					"when": "view == contests && viewItem == RunningContest",
					"group": "inline"
				}
			],
			"commandPalette": [
				{
					"command": "contest.createContestFolders",
					"when": "false"
				}
			]
		},
		"commands": [
			{
				"command": "codeforcesbot-ext.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "codeforcesbot-ext.login",
				"title": "Login"
			},
			{
				"command": "contest.createContestFolders",
				"title": "Create Contest Folders",
				"icon": {
					"light": "res/img/light/createFolder.svg",
					"dark": "res/img/dark/createFolder.svg"
				}
			},
			{
				"command": "contests.refresh",
				"title": "Refresh",
				"icon": {
					"light": "res/img/light/refresh.svg",
					"dark": "res/img/dark/refresh.svg"
				}
			}
		],
		"configuration": {
			"title": "Codeforces Bot",
			"properties": {
			  "codeforcesBot.compile.command": {
				"type": "string",
				"default": "g++-8 --std=c++14",
				"description": "The command to compile the solution file",
				"scope": "window"
			  },
			  "codeforcesBot.template.templateFile": {
				"type": "string",
				"description": "The template for the solution file",
				"scope": "window"
			  },
			  "codeforcesBot.template.templateLineNumber": {
				"type": "number",
				"default": 175,
				"description": "The line number of template from where you want to start coding",
				"scope": "window"
			  }
			}
		}
	},
	"scripts": {
		"self-test": "tsc ./src/testing.ts; node ./src/testing.js",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.40.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@types/cheerio": "^0.22.22",
		"axios": "^0.21.0",
		"cheerio": "^1.0.0-rc.3",
		"query-string": "^6.13.6",
		"shelljs": "^0.8.4"
	}
}
